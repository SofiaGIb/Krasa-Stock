// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  amount      Int
sales Sale[]
}

model Sale {
id Int @id @default(autoincrement())
total Int 
product Product @relation(fields:[productId],references:[id])
productId Int


}